{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/ensure-memory-server.js\"",
            "timeout": 120000,
            "statusMessage": "Configuring mcp-memory-service..."
          },
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/inject-rufus.js\"",
            "statusMessage": "Rufus Shinra prend le controle..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/user-prompt-submit-rufus.js\"",
            "timeout": 5000,
            "statusMessage": "Rufus context reload..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/pre-commit-check.js\"",
            "timeout": 180000,
            "statusMessage": "Running tests before commit..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/subagent-stop-memory.js\"",
            "timeout": 5000,
            "statusMessage": "Memory checkpoint + pipeline routing..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact-save.js\"",
            "timeout": 10000,
            "statusMessage": "Saving session state before compaction..."
          }
        ]
      }
    ]
  }
}
